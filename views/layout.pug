  body
    header.main-header
      .main-header__container
        a.logo(href='/')
          img.logo__img(src='/public/img/res/Logo.webp' alt)
        .main-header__container-login
          if user
            a.login-option.orders-login(href='/ordenes')
              img(src='/public/img/res/cart.webp' alt)
              span.login-count-msj.orders-msj=user.orders
            |
            |
            #bell-login.login-option.bell-login
              img(src='/public/img/res/bell.webp' alt)
              span#bell-msj.login-count-msj.bell-msj=user.messages.length
            |
            |
          if !user
            .go-login
              a.btn.btn-go-login(href='/users/login')
                img(src='/public/img/res/loginuser.webp')
                | Acceder

              a.btn.btn-go-login(href='/users/register')
                img(src='/public/img/res/adduserblue.webp' alt)
                | Registrarse
          if user
            .login-option
              img#avatar-login.avatar-login(src='/public/img/res/avatar.webp' alt)
    if user
      article.account-menu__container
        section#account-section.account-section
          ul.account-submenu
            li.account-submenu__element--title Cuenta
            li.account-submenu__element
              a(href='/user/modify_profile')
                img(src='/public/img/res/settings.webp' alt)
                | Modificar Perfil

            li.account-submenu__element
              a(href='/user/logout')
                img(src='/public/img/res/log-out.webp' alt)
                | Salir

        article#bell-section.bell-section
          h4.bell-section___title
            | Nuevas Notificaciones 
            span#bell-new-msj.bell-number=user.newMessages
          section.bell-submenu
            .bell-submenu__inner-container
              ul.bell-submenu__list
                -for (let i = user.messages.length-1; i >=0; i--)
                  -msg = user.messages[i]
                  -const state = (msg.state == "new")?"bell-submenu__element--new" :"bell-submenu__element--old";
                  li.bell-submenu__element(class=state id=msg._id)=msg.msg
                    span.bell-time=msg.fullDate
                    span.remove-notifications
                      img(src='/public/img/res/three-dots.webp' alt)
                      img(src='/public/img/res/trash.webp' alt)

          .show-all-notifications.

            Ver todas las notificaciones

    .menu-icon__container
      img.menu-icon(src='/public/img/res/menu-icon.webp' alt)
    nav.nav-menu
      .nav-menu__inner-container
        .nav-menu__content
          img.nav-menu__login-logo(src='/public/img/res/Logo.webp' alt)
          .nav-menu__login
            .main-header__container-login
              if user
                a.login-option.orders-login(href='/ordenes')
                  img(src='/public/img/res/cart.webp' alt)
                  span.login-count-msj.orders-msj=user.orders
                |
                |
                .login-option.bell-login
                  img(src='/public/img/res/bell.webp' alt)
                  span.login-count-msj.bell-msj=user.newMessages
                |
                |
              if !user
                .go-login
                  a.btn.btn-go-login(href='/users/login')
                    img(src='/public/img/res/loginuser.webp')
                    | Acceder

                  a.btn.btn-go-login(href='/users/register')
                    img(src='/public/img/res/adduserblue.webp' alt)
                    | Registrarse
              if user
                .login-option
                  img#avatar-login.avatar-login(src='/public/img/res/avatar.webp' alt)
          .nav-menu__element(class=path === "/" && "nav-menu__element--active")
            a.nav-menu__link(href='/')
              img(src='/public/img/res/dog-home.webp' alt)
              span  Inicio

          .nav-menu__element(class=path.startsWith("/mascotas")  && "nav-menu__element--active")
            #pet-submenu.nav-menu__link
              img(src='/public/img/res/pet.webp' alt)
              span  Mascotas 
              .show-submenu-container
                img.show-submenu-img(src='/public/img/res/next.webp' alt)
              .submenu
                ul.submenu-list
                  a.submenu-element(href='/mascotas')
                    img(src='/public/img/res/dog.webp' alt)
                    | Perros

                  a.submenu-element(href='/mascotas')
                    img(src='/public/img/res/cat.webp' alt)
                    | Gatos

                  a.submenu-element(href='/mascotas')
                    img(src='/public/img/res/macaw.webp' alt)
                    | Aves

                  a.submenu-element(href='/mascotas')
                    img(src='/public/img/res/roedor.webp' alt)
                    | Roedor

                  a.submenu-element(href='/mascotas')
                    img(src='/public/img/res/fish.webp' alt)
                    | Peces

                  a.submenu-element(href='/mascotas')
                    img(src='/public/img/res/tortoise.webp' alt)
                    | Otros

          .nav-menu__element(class=path.startsWith("/accesorios")  && "nav-menu__element--active")
            a.nav-menu__link(href='/accesorios')
              img(src='/public/img/res/accesorios.webp' alt)
              span  Accesorios
          .nav-menu__element(class=path.startsWith("/servicios")  && "nav-menu__element--active")
            #services-menu.nav-menu__link
              img(src='/public/img/res/doctor.webp' alt)
              span  Servicios 
              .show-submenu-container
                img.show-submenu-img(src='/public/img/res/next.webp' alt)
              .submenu
                ul.submenu-list
                  li.submenu-element
                    img(src='/public/img/res/stethoscope.webp' alt)
                    | Veterinario

          .nav-menu__element.contact-us
            .nav-menu__link
              img(src='/public/img/res/phone-blue.webp' alt)
              span  Contáctenos
          .nav-menu__element.about-us
            .nav-menu__link
              img(src='/public/img/res/info.webp' alt)
              span  Acerca De
