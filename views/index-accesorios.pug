extends ./admin-layout.pug
block contenido
  div(class="container top-space")
    for accesorio in accesorios
      .border.tr
        .row
          .col-md-10
            h3 Tipo: #{accesorio.type}
            h3 Precio: #{accesorio.price}
            h3 Cantidad: #{accesorio.cnt}
            h3 Nombre del dueño: #{accesorio.ownerName}
            h3 Télefono del dueño: #{accesorio.ownerPhone}
          .col-md-2.container.flex-container
            a(href="/admin/accesorios/"+accesorio._id class="right-space link-info") Editar
            form(action=`/admin/accesorios/${accesorio._id}?_method=DELETE` method="POST" class="link-container delete-form")
              input(type="submit" value="Eliminar" class="link-danger") 
