extends ./admin-layout.pug
block contenido
  body    
    div(class="container col-md-4 center-block big-top-space")
      h1(class="text-center") Admin Login
      form(action="/admin/login" method="POST")
        div(class="form-group")
          label(for="username" class="form-label" placeholder="Nombre de Usuario") Usuario
          input(type="text" class="form-control" name="username" required id="username")

          label(for="password" class="form-label" placeholder="Contraseña") Contraseña
          input(type="password" class="form-control" name="password" required id="password")

          div(class="top-space flex-container")
            input(type="submit" value="Iniciar sesion" class="btn btn-info")

