    style.
      * {
        margin: 0;
        padding: 0;
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        box-sizing: border-box;
          }

          body {
            font-family: "Montserrat", sans-serif;

            color: #555555;
          }

          header {
            background-color: #007bff;
            padding: 0.4rem;
          }
          header img {
            text-align: center;
            width: 15rem;
          }

          article {
            background-color: #f8f8f9;
            padding: 0 1rem 1rem;
          }

          .email-title {
            color: #f26422;
            padding: 1rem 0;
            font-size: 1.3rem;
            text-align: center;
          }

          .underline {
            text-align: center;
          }

          .underline span {
            display: inline-block;
            width: 20%;
            min-width: 6rem;
            max-width: 15rem;
            height: 3px;
            background-color: #fff;
            vertical-align: middle;
            background-color: #ffa54c;
            border-radius: 8px;
          }
          .underline img {
            vertical-align: middle;
            width: 1.2rem;
            margin: 0 0.3rem;
          }

          section {
            padding: 1rem;
            background-color: #fff;
            margin-bottom: 1rem;
            font-size: 0.9rem;
          }
          .main-section__title {
            margin: 1rem 0;
            font-size: 1.2rem;
          }
          .main-section__info {
            margin: 2rem 0;
          }

          .main-section__btn {
            margin: 1.6rem 0;
            text-align: center;
          }
          .main-section__btn strong {
            display: block;
            margin: 1rem 0;
          }

          .btn {
            cursor: pointer;
            outline: none;
            background-color: #007bff;

            padding: 0.5rem 0.7rem;
            display: inline-block;
            text-align: center;
            font-size: 1rem;
            font-weight: bold;
            font-family: inherit;
            margin: 0.4rem 0;
            border: none;
            border-radius: 6px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.26);
            transition: all 0.4s ease;
          }
          .btn a {
            text-decoration: none;
            color: #fff;
          }

          .btn:hover {
            box-shadow: none;
          }

          .btn:active {
            background-color: #0059b8;
          }

          .main-section__contact {
            font-size: 0.9rem;
          }
          .main-section__contact strong {
            color: #007bff;
          }
          .email {
            cursor: pointer;
          }
          footer {
            text-align: center;
          }
          .footer-logo {
            width: 12rem;
            display: inline-block;
          }
          .copyright {
            display: block;
            font-size: 0.9rem;
          }
          .social-media {
            margin: 1rem 0;
            display: block;
          }
          .social-media span {
            font-size: 0.9rem;
            vertical-align: middle;
          }
          .social-media img {
            width: 1.9rem;
            vertical-align: middle;
          }

